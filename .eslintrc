{
  "parser": "babel-eslint",

  "env": {
    "browser": true,
    "jquery": true,
    "commonjs": true
  },

  "extends": "airbnb",

  "globals": {
    "React": true,
    "ReactDOM": true
  },

  "rules": {
    "comma-dangle": "off",
    "arrow-body-style": "off",
    "global-require": "off",
    "no-nested-ternary": "off",
    "no-unneeded-ternary": "off",

    "import/no-unresolved": "off",

    "react/prop-types": "off",
    "react/jsx-first-prop-new-line": "off",
    "react/require-render-return": "off",
    "react/sort-comp": "off"
  }
}
